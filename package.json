{
  "name": "hello-world-aws",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "run-s clean lambdas",
    "lambdas": "run-s lambdas:typecheck lambdas:build package && npm install",
    "lambdas:typecheck": "tsc --noEmit",
    "lambdas:build": "esbuild ./lambdas/**/*.ts --bundle --platform=node --target=node18 --packages=external --outdir=bin",
    "package": "rimraf node_modules && npm ci --omit=dev --strict-peer-deps=true && cp -r node_modules bin/",
    "clean": "rimraf ./bin",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "private": true,
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.303.0",
    "@aws-sdk/client-dynamodb": "^3.303.0",
    "argon2": "^0.30.3"
  },
  "devDependencies": {
    "esbuild": "0.17.15",
    "rome": "12.0.0",
    "@types/aws-lambda": "^8.10.114",
    "@types/node": "^18.15.11",
    "aws-lambda": "^1.0.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^4.4.1",
    "typescript": "^5.0.3"
  }
}
